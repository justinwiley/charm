<h1>Listing locations</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Desc</th>
    <th>Lat</th>
    <th>Long</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Country</th>
  </tr>

<% for location in @locations %>
  <tr>
    <td><%=h location.user_id %></td>
    <td><%=h location.title %></td>
    <td><%=h location.desc %></td>
    <td><%=h location.lat %></td>
    <td><%=h location.long %></td>
    <td><%=h location.address %></td>
    <td><%=h location.city %></td>
    <td><%=h location.state %></td>
    <td><%=h location.zip %></td>
    <td><%=h location.country %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


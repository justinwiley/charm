<h1>New item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :rawbody, :cols => "60" %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
  <button type="submit" class="button positive">
    <img src="stylesheet/blueprint/plugins/buttons/icons/tick.png" alt=""/>Save
  </button>
  
   <%= 
   #f.submit "Create" 
   %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>
